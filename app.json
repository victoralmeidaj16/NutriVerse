{
  "expo": {
    "name": "NutriVerse",
    "slug": "nutriverse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0F12"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nutriverse.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0F12"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.nutriverse.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow NutriVerse to access your camera to take photos of food and ingredients."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow NutriVerse to access your photos to select food images."
        }
      ]
    ]
  }
}
